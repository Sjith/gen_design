import processing.core.PApplet;

public class MySketch
        extends PApplet {

    public void setup() {
    }

    public void draw() {
    	stroke(255);
        if (mousePressed) {
          line(mouseX,mouseY,pmouseX,pmouseY);
        }
    }

    public static void main(String[] args) {
        PApplet.main(new String[] {MySketch.class.getName()});
    }
}
